public class Average {
    public static double calculateAverage(int[] arr) {
        int sum = 0;
        for (int number : arr) {
            sum += number;
        }
        return (double) sum / arr.length;
    }

    public static void main(String[] args) {
        int[] numbers = {1, 2, 3, 4, 5};
        System.out.println(calculateAverage(numbers));
    }
}
